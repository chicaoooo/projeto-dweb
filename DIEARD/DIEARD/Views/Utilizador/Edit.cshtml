@model DIEARD.Models.Utilizadores

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Editar Perfil</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Campos ocultos necessários -->
                        <input asp-for="UserId" type="hidden" />

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome:</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email:</label>
                            <input asp-for="Email" type="email" class="form-control" readonly />
                            <small class="form-text text-muted">O email não pode ser alterado.</small>
                        </div>

                        <!-- Telemóvel -->
                        <div class="mb-3">
                            <label asp-for="Telemovel" class="form-label">Telemóvel:</label>
                            <input asp-for="Telemovel" class="form-control" />
                            <span asp-validation-for="Telemovel" class="text-danger"></span>
                        </div>

                        <!-- Morada -->
                        <div class="mb-3">
                            <label asp-for="Morada" class="form-label">Morada:</label>
                            <input asp-for="Morada" class="form-control" />
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>

                        <!-- Código Postal -->
                        <div class="mb-3">
                            <label asp-for="CodPostal" class="form-label">Código Postal:</label>
                            <input asp-for="CodPostal" class="form-control" placeholder="1234-567" />
                            <span asp-validation-for="CodPostal" class="text-danger"></span>
                        </div>

                        <!-- Botao Guardar -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}