@model DIEARD.ViewComponents.ProfilePhotoViewModel

<div class="profile-photo-wrapper @Model.CssClass" style="position: relative; display: inline-block;">
    @if (!string.IsNullOrEmpty(Model.FotoPerfil))
    {
        <!-- Foto do perfil existente -->
        <img src="@Model.FotoPerfil"
             alt="Foto de @Model.UserName"
             class="profile-photo"
             style="width: @(Model.Size)px; height: @(Model.Size)px; border-radius: 50%; object-fit: cover; border: 3px solid #dee2e6; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" />
    }
    else
    {
        <!-- Placeholder quando não tem foto -->
        <div class="profile-photo-placeholder"
             style="width: @(Model.Size)px; height: @(Model.Size)px; border-radius: 50%; background-color: #e0e0e0; border: 3px solid #dee2e6; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
            <i class="bi bi-person-fill" style="font-size: @(Model.Size / 3)px; color: #6c757d;"></i>
        </div>
    }

</div>

<style>
    .profile-photo-wrapper:hover .edit-photo-btn {
        transform: scale(1.1);
        transition: transform 0.2s ease;
    }

    .edit-photo-btn:hover {
        background-color: #0056b3 !important;
        text-decoration: none;
    }
</style>