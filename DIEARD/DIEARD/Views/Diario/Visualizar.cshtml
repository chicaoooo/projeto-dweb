@model IEnumerable<DIEARD.Models.Diario>

@{
    ViewData["Title"] = "Meus Diários";
}

<div class="container">
    <h1>Meus Diários</h1>

    <!-- Filtro por categoria -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" asp-action="VisualizarLista" class="d-inline-flex align-items-center">
                <label for="categoriaId" class="form-label me-2 mb-0">Categoria:</label>
                <select name="categoriaId" id="categoriaId" class="form-select me-2" onchange="this.form.submit()" style="width: auto;">
                    <option value="">Todas as categorias</option>
                    @foreach (var categoria in ViewBag.Categorias as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                    {
                        @if (categoria.Selected)
                        {
                            <option value="@categoria.Value" selected>
                                @categoria.Text
                            </option>
                        }
                        else
                        {
                            <option value="@categoria.Value">
                                @categoria.Text
                            </option>
                        }
                    }
                </select>
            </form>
        </div>
        <div class="col-md-6 text-end">
            @if (Model.Any())
            {
                <!-- Só mostra o botão do topo quando há diários -->
                <a asp-controller="Diario" asp-action="Criar" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Criar Novo Diário
                </a>
            }
        </div>
    </div>

    <!-- Informação sobre filtro ativo -->
    @if (ViewBag.CategoriaSelecionada != null)
    {
        var categoriaNome = ((List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Categorias)
        .FirstOrDefault(c => c.Value == ViewBag.CategoriaSelecionada.ToString())?.Text;

        <div class="alert alert-info alert-dismissible fade show" role="alert">
            Mostrando diários da categoria: <strong>@categoriaNome</strong>
            <a href="@Url.Action("VisualizarLista")" class="btn btn-sm btn-outline-secondary ms-2">Ver todos</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Cards de diários -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@item.Categoria.Nome</span>
                            <small class="text-muted">@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Titulo</h5>
                            <p class="card-text">
                                @{
                                    var conteudoResumo = item.Conteudo.Length > 100
                                    ? item.Conteudo.Substring(0, 100) + "..."
                                    : item.Conteudo;
                                }
                                @conteudoResumo
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <!-- Botões horizontais - sempre mostra Ver, Editar e Apagar pois é a view do próprio usuário -->
                            <div class="d-flex gap-1 flex-wrap">
                                <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>
                                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm flex-fill text-center">
                                    <i class="fas fa-edit me-1"></i>Editar
                                </a>
                                <form asp-action="Apagar" asp-route-id="@item.Id" method="post" class="flex-fill"
                                      onsubmit="return confirm('Tem a certeza que quer apagar este diário?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Apagar diário">
                                        <i class="fas fa-trash me-1"></i>Apagar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <div class="mb-4">
                <i class="fas fa-book-open fa-3x text-muted"></i>
            </div>
            @if (ViewBag.CategoriaSelecionada != null)
            {
                <h4>Nenhum diário encontrado nesta categoria</h4>
                <p class="text-muted">Tente selecionar uma categoria diferente ou criar um novo diário.</p>
            }
            else
            {
                <h4>Ainda não tens diários</h4>
                <p class="text-muted">Começa a escrever os teus pensamentos e experiências!</p>
            }
            <a asp-controller="Diario" asp-action="Criar" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Criar o meu primeiro diário
            </a>
        </div>
    }
</div>